{% macro recipes(recipes) %}
<div class="cards">
    {% for recipe in recipes %}
    <div class="card" id="{{recipe.id}}">

        <img src="{{ recipe.img }}" alt="{{ recipe.title }}">
        <div>
            <h3>{{ recipe.title }}</h3>
            <p>por {{ recipe.chef_name }}</p>
            <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
        </div>
    </div>
    {% endfor %}
</div>
{% endmacro %}