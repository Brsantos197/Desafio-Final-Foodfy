{% extends "admin-layout.njk" %}

{% block content %}

<div class="title-header">
    <h1>Gerenciar chefs</h1>
    <div>
        <a href="/admin/chefs/create">Cadastrar chef</a>
    </div>
</div>


<div class="chef-list">
    <div class="cards">
        {% for chef in chefs %}
        <div class="card" id="{{chef.id}}">
            <img src="{{ chef.img }}" alt="{{ chef.name }}">
            <div>
                <h3>{{ chef.name }}</h3>
                <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
