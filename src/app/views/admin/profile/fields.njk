<div class="item">
    <h3>Nome</h3>
    <input 
        type="text" 
        name="name" 
        placeholder="Digite seu nome completo"
        value="{{ user.name }}"
    >
</div>
<!-- /.item -->

<div class="item">
    <h3>Email</h3>
    <input 
        type="email" 
        name="email" 
        placeholder="Digite seu email"
        value="{{ user.email }}"
        onblur="Validate.apply(this, 'isEmail')"

    >
</div>
<!-- /.item -->

<div class="item">
    <h3>Senha</h3>
    <input 
        type="password" 
        name="password" 
        placeholder="Digite sua senha"
        value="{{ user.senha }}"
    >
</div>
<!-- /.item -->