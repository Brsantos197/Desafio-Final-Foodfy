<div class="item">
    <h3>Nome</h3>
    <input 
        type="text" 
        name="name" 
        placeholder="Digite seu nome completo"
        value="{{ user.name }}"
    >
</div>
<!-- /.item -->

<div class="item">
    <h3>Email</h3>
    <input 
        type="email" 
        name="email" 
        placeholder="Digite seu email"
        value="{{ user.email }}"
        onblur="Validate.apply(this, 'isEmail')"

    >
</div>
<!-- /.item -->

<div >
    <input 
        type="checkbox" 
        name="is_admin" 
        id="is_admin"
        value="true"
        {% if user.is_admin == true %}
        checked
        {% endif %}
    >

    <label for="is_admin">Administrador</label>

</div>

